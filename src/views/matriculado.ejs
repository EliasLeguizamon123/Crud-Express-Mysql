<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>Nro de matricula</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>DNI</td>
            <td>acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= data[i].nro_matricula %></td>
                <td><%= data[i].nombre %></td>
                <td><%= data[i].apellido %></td>
                <td><%= data[i].dni %></td>
                <td>
                  <a href="/update/<%= data[i].nro_matricula %>" class="btn btn-info">Edit</a>
                  <a href="/delete/<%= data[i].nro_matricula %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/add" method="POST">
          <div class="form-group">
            <input type="text" name="nro_matricula" placeholder="nro_matricula" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="nombre" placeholder="nombre" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="apellido" placeholder="apellido" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="dni" placeholder="dni" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            Guardar Matriculado
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
